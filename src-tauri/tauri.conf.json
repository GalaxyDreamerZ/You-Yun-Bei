{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RGSM",
  "identifier": "com.game-save-manager",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3002",
    "beforeDevCommand": "pnpm web:dev --port 3002 --host",
    "beforeBuildCommand": "pnpm web:generate"
  },
  "app": {
    "windows": [
      {
        "title": "Game Save Manager",
        "width": 1280,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
